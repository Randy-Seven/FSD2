extends ../assets/pug/layout/main.pug

block content
    .container
        .search-room__inner      
            .search-room__menu <!-- Menu -->
                .search-room__arrival-date-margin  
                    .text-field__header
                        |даты пребывания в отеле
                    button.text-field__input.text-field__input_dropdown 19 авг - 23 авг
                        .arrow
                            img(src="/assets/img/down-arrow.svg" width="12", alt="")

                .search-room__guests-margin
                
                    .text-field__header <!-- From "text-fields.pug" -->
                        |гости

                    div(class="facilities-dropdown__menu-js")
                        button.text-field__input.text-field__input_dropdown.facilities-dropdown__btn.guests-dropdown__input-js Сколько гостей

                        ul.facilities-dropdown__expand.guests-dropdown__btn.search-room__guests-dropdown-width
                            li.facilities-dropdown__rooms
                                span Взрослые 
                                .facilities-dropdown__count
                                    button.facilities-dropdown__plus-minus.facilities-dropdown__plus-minus_disabled.guests-dropdown__minus-js -
                                    p.guests-dropdown__num-js 0
                                    button.facilities-dropdown__plus-minus.guests-dropdown__plus-js +
                            li.facilities-dropdown__rooms
                                span Дети
                                .facilities-dropdown__count
                                    button.facilities-dropdown__plus-minus.facilities-dropdown__plus-minus_disabled.guests-dropdown__minus-js -
                                    p.guests-dropdown__num-js 0
                                    button.facilities-dropdown__plus-minus.guests-dropdown__plus-js +
                            li.facilities-dropdown__rooms
                                span Младенцы
                                .facilities-dropdown__count
                                    button.facilities-dropdown__plus-minus.facilities-dropdown__plus-minus_disabled.guests-dropdown__minus-js -
                                    p.guests-dropdown__num-js 0
                                    button.facilities-dropdown__plus-minus.guests-dropdown__plus-js +
                            .guests-dropdown__apply-cancel 
                                button.guests-dropdown__apply.guests-dropdown__apply-js Применить
                                button(hidden = 'true').guests-dropdown__apply.guests-dropdown__cancel-js Очистить

                .search-room__slider-margin
                    .range-slider__header диапазон цены
                        span 5 000₽ - 10 000₽
                    .range-slider__price.search-room__range-margin
                        .range-slider__range
                            .range-slider__min
                            .range-slider__max
                    .search-room__cost-per-day Стоимость за сутки пребывания в номере

                .search-room__checkbox-margin
                    h2.checkbox-buttons__header Дополнительные условия
                    ul.checkbox-buttons__items
                        li
                            input(class="checkbox-buttons__input" id="smoke1" type="checkbox")
                            label(for="smoke1" class="checkbox-buttons__item") Можно курить
                        li
                            input(class="checkbox-buttons__input" id="pet1" type="checkbox")
                            label(for="pet1" class="checkbox-buttons__item") Можно с питомцами
                        li
                            input(class="checkbox-buttons__input" id="invite1" type="checkbox")
                            label(for="invite1" class="checkbox-buttons__item") Можно пригласить гостей (до 10 человек)

                .search-room__rich-checkbox-margin
                    .rich-checkbox__header доступность

                    ul.checkbox-buttons__items.additionals-checkbox__expand.additionals-checkbox__expand_rich  <!-- From "buttons.pug" -->
                        li
                            input(class="checkbox-buttons__input" id="rich11" type="checkbox")
                            label(for="rich11" class="checkbox-buttons__item rich-checkbox__item") Широкий коридор
                            .rich-checkbox__description Ширина коридоров в номере не менее 91 см. 
                        li
                            input(class="checkbox-buttons__input" id="rich21" type="checkbox")
                            label(for="rich21" class="checkbox-buttons__item rich-checkbox__item") Помощник для инвалидов
                            .rich-checkbox__description На 1 этаже вас встретит специалист  и проводит до номера. 

                .search-room__facilities-margin
                    .text-field__header <!-- From "text-fields.pug" -->
                        |удобства номера 

                    div(class="facilities-dropdown__menu-js")
                        button.text-field__input.text-field__input_dropdown.facilities-dropdown__btn.facilities-dropdown__input-js 2 спальни, 2 кровати...

                        ul.facilities-dropdown__expand
                            li.facilities-dropdown__rooms
                                span Спальни 
                                .facilities-dropdown__count
                                    button.facilities-dropdown__plus-minus.facilities-dropdown__minus-js -
                                    p.facilities-dropdown__num-js 2
                                    button.facilities-dropdown__plus-minus.facilities-dropdown__plus-js +
                            li.facilities-dropdown__rooms
                                span Кровати
                                .facilities-dropdown__count
                                    button.facilities-dropdown__plus-minus.facilities-dropdown__minus-js -
                                    p.facilities-dropdown__num-js 2
                                    button.facilities-dropdown__plus-minus.facilities-dropdown__plus-js +
                            li.facilities-dropdown__rooms
                                span Ванные комнаты
                                .facilities-dropdown__count
                                    button.facilities-dropdown__plus-minus.facilities-dropdown__plus-minus_disabled.facilities-dropdown__minus-js -
                                    p.facilities-dropdown__num-js 0
                                    button.facilities-dropdown__plus-minus.facilities-dropdown__plus-js +

                .search-form__additionals
                    include ../blocks/page-form-elements/checkbox-lists/additionals-checkbox.pug

            .search-room__rooms <!-- Rooms-->
                .rooms__header Номера, которые мы для вас подобрали
                .rooms__grid
